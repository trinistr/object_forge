#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"

require "ostruct"

# Load this gem
gem_name = File.basename(Dir["*.rb", base: "#{__dir__}/../lib"].first)
require gem_name

$forge = ObjectForge::Forge.new(OpenStruct) do |f|
  f.foo { bar + 1 }
  f.sequence(:bar) { _1}

  f.trait :zero do
    f.foo { 0 }
  end
end

# Start interactive console
require "irb"
IRB.start(__FILE__)
