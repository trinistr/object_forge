#!/usr/bin/env ruby
# frozen_string_literal: true

require "bundler/setup"

require "ostruct"

# Load this gem
gem_name = File.basename(Dir["*.rb", base: "#{__dir__}/../lib"].first)
require gem_name

FORGE =
  ObjectForge::Forge.define(OpenStruct) do |f| # rubocop:disable Style/OpenStructUse
    f.foo { bar - 1 }
    f.sequence(:bar)

    f.trait :zero do
      f.foo { 0 }
    end
  end

# Start interactive console
require "irb"
IRB.start(__FILE__)
